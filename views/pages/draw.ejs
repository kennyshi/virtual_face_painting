<!doctype html>
<html>
  <head>
    <title>Face Painting</title>
    <link href="/public/css/literallycanvas.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no" />

    <style type="text/css">
      .fs-container {
        width: 620px;
        height: <%= image.image.height + 30 %>px;
        margin: auto;
      }

      .literally {
        width: 620px;
        height: <%= image.image.height + 30 %>px;
        position: relative;
      }
    </style>
  </head>

  <body>
    <div class="fs-container">
      <div id="lc"></div>
    </div>

    <form class="controls export">
      <input type="submit" data-action="export-snapshot" value="Export Snapshot">
      <textarea id="lc_snapshot"></textarea>
      <br/>
      <input type="submit" data-action="import-snapshot" value="Import Snapshot">
    </form>

    <p>Drawing by user <%= user.id %> <%= user.displayName %></p>

    <!-- you really ought to include react-dom, but for react 0.14 you don't strictly have to. -->
    <script src="/public/js/react-0.14.3.js"></script>
    <script src="/public/js/literallycanvas.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script type="text/javascript">
      $(document).ready(function() {
        var backgroundImage = new Image()
        backgroundImage.src = '<%= image_url %>';

        var lc = LC.init(
            document.getElementById('lc'),
            {
              backgroundShapes: [
                LC.createShape(
                  'Image', {x: 0, y: 0, image: backgroundImage, scale: 1}),
              ],
              imageURLPrefix: '/public/img/lc-images',
              toolbarPosition: 'bottom',
              defaultStrokeWidth: 2,
              strokeWidths: [1, 2, 3, 5, 30]
            });
        $('.controls.export [data-action=export-snapshot]').click(function(e) {
          e.preventDefault();
          $("textarea#lc_snapshot").val(JSON.stringify(lc.getSnapshot()));
        });
        $('.controls.export [data-action=import-snapshot]').click(function(e) {
          e.preventDefault();
          lc.loadSnapshot(JSON.parse($("textarea#lc_snapshot").val()));
        });
      });
    </script>
    <div>
      <a href="/">Home</a>
    </div>
  </body>
</html>
